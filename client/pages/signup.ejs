<!--
Sign-up page

Options:
  fail_msg: if this object exists, displays it as a failure message telling the user that sign up failed.
-->

<!DOCTYPE>

<html>
  <head>
    <% include ../partials/head_common %>
  </head>

  <body>
    <div>
      <% include ../partials/navbar %>
    </div>

    <div class="jumbotron">
      <div class="text-center container">
        <h2>Sign up</h2>
      </div>
    </div>

    <div class="container text-center">
      <form class="form-horizontal" method="post">
        <div class="form-group">
          <label class="control-label col-sm-2" for="name">Name:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="How would you like to be called?">
          </div>
        </div>
      
        <div class="form-group">
          <label class="control-label col-sm-2" for="username">Username:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username">
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2" for="pwd">Password:</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd" name="password" placeholder="Enter your password">
          </div>
        </div>
        
        <div class="col-sm-12">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>

        <% if(typeof fail_msg !== 'undefined'){ %>
          <div class="col-sm-12">
            <div class="alert alert-info" style="color: darkblue; width: 50%; margin: 30px auto 0;">
              <strong>Info: </strong> <%= fail_msg %>
            </div>
          </div>
        <% } %>
      </form>
    </div>
  </body>
</html>